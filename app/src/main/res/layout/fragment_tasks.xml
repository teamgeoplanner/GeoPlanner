    <TextView
        android:id="@+id/txtTaskHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_thin"
        android:paddingLeft="20dp"
        android:text="Tasks"
        android:textSize="48dp"
